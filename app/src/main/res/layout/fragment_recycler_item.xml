<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:id="@+id/user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:text="我叫用户名"
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:text="轮滑社"
            android:id="@+id/user_club"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp">

        <TextView
            android:textSize="18sp"
            android:text="这是数据标题"
            android:id="@+id/data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="12sp"
            android:singleLine="false"
            android:text="这是数据内容，我们要拿新啦啦啦，地点在中心广场"
            android:id="@+id/data_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:text="01-25"
            android:id="@+id/data_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/thumb_ups"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/comments_number"
            android:drawableLeft="@android:drawable/ic_menu_slideshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>