<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shot_picture"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:elevation="4dp"
        android:background="@color/white"/>


    <ScrollView
        android:nestedScrollingEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:maxHeight="48dp"
                            android:maxWidth="48dp"
                            android:id="@+id/publisher_avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />

                        <TextView
                            android:id="@+id/publisher_name"
                            android:textSize="20sp"
                            android:layout_toEndOf="@+id/publisher_avatar"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/publish_time"
                            android:layout_toEndOf="@+id/publisher_avatar"
                            android:layout_alignBottom="@+id/publisher_avatar"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal"
                            android:id="@+id/views_block"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="14sp"
                                android:layout_marginEnd="16dp"
                                android:id="@+id/views_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:layout_marginEnd="8dp"
                                android:maxHeight="24dp"
                                android:maxWidth="24dp"
                                android:id="@+id/views_icon"
                                android:src="@drawable/eye"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_alignParentEnd="true"
                            android:layout_alignBottom="@+id/publisher_avatar"
                            android:orientation="horizontal"
                            android:id="@+id/likes_block"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="14sp"
                                android:id="@+id/likes_count"
                                android:layout_marginEnd="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:maxHeight="24dp"
                                android:maxWidth="24dp"
                                android:id="@+id/likes_icon"
                                android:src="@drawable/heart"
                                android:layout_marginEnd="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:id="@+id/shot_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/shot_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="1"
                            android:text="评论（6）"
                            android:textSize="20sp"
                            android:id="@+id/comments_text_view"
                            android:layout_marginStart="16dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:text="添加评论"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:id="@+id/button_add_comment"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/comments_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="1000dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>